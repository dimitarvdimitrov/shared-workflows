# Copy this file to .env and fill in your values

# Required: Loki endpoint URL
LOKI_URL=https://logs.grafana.com

# Required: Loki authentication
LOKI_USERNAME=your_username
LOKI_PASSWORD=your_password

# Required: Repository name to analyze
REPOSITORY=your-repo-name

# Optional: Time range for analysis (default: 1h)
# Supports: 30m, 2h, 24h, 7d, etc.
TIME_RANGE=24h

# Required: GitHub token for gh CLI and git operations
GITHUB_TOKEN=ghp_your_github_token_here

# Optional: Working directory (default: current directory)
WORKING_DIRECTORY=.